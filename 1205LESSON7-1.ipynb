    "#while迴圈\n",
    "##不知道明確執行次數\n",
    "'''應用：每月存錢，當存到30000援救顯示提示訊息告知'''\n",
    "import pyinputplus as pyip\n",
    "deposit = 0\n",
    "while deposit < 30000:\n",
    "    month = pyip.inputInt(\"請輸入本月份存款：\")\n",
    "    print(month)\n",
    "    deposit += month\n",
    "print(f\"恭喜！已經存夠了，總存款為：{deposit}\")"
   ]
  }
